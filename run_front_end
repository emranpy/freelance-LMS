#! /bin/bash

mkdir -p database logs/summarized logs/archive

function run_container {
  subdir_name="$1"
  run_args="$2"
  tag="$3"

  if [[ "${subdir_name}" == "" ]]
  then
    echo "No subdirectory name was specified."
    exit 1
  fi

  if [[ "${tag}" == "" ]]
  then
    tag=version$(cat VERSION)
  fi

  container_name=${subdir_name}_$USER

  docker container stop ${container_name} 2> /dev/null

  set -o errexit

  image_name=srp33/codebuddy_${subdir_name}

  docker build -t ${image_name} \
               -f ${subdir_name}/Containerfile \
               --build-arg USER_ID=$(id -u ${USER}) \
               --build-arg GROUP_ID=$(id -g ${USER}) \
               .

  mkdir -p /tmp/cache

  #docker run -d \
  docker run -i -t \
    --rm \
    --memory=4g \
    --cap-drop=ALL \
    --log-driver=none \
    --name ${container_name} \
    --read-only \
    -v /tmp/cache:/tmp/cache \
    ${run_args} \
    ${image_name}
}

args="-e NUM_PROCESSES=2 -e PORT=8008 -e MPORT=9798 -v $(pwd)/database:/database -v $(pwd)/logs:/logs -v $(pwd)/secrets:/secrets"

# if MacOS, set the MHOST environment variable and bind the port 8008
if [[ $(uname) == "Darwin" ]]
then
  args="-p 8008:8008 -e MHOST=host.docker.internal $args"
# otherwise, assume linux and use the network host which does not work on Docker for Mac
else
  args="--network host $args"
fi

echo "ARGS: $args"
#run_container front_end "--network host -e NUM_PROCESSES=4 -e PORT=9001 -e MPORT=9798 -v $(pwd)/database:/database -v $(pwd)/logs:/logs -v $(pwd)/secrets:/secrets" ""
#run_container front_end "--network host -e NUM_PROCESSES=2 -e PORT=8008 -e MPORT=9798 -v $(pwd)/database:/database -v $(pwd)/logs:/logs -v $(pwd)/secrets:/secrets" ""
run_container front_end "$args" ""
